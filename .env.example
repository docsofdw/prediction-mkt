# ─── Wallet ───────────────────────────────────────────────
# Your Polygon wallet private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Your Polymarket profile/funder address (where USDC lives)
FUNDER_ADDRESS=your_funder_address_here

# ─── Polymarket API Credentials ───────────────────────────
# Generated via client.createOrDeriveApiKey()
# Leave blank on first run — the setup script will derive them
POLY_API_KEY=
POLY_API_SECRET=
POLY_PASSPHRASE=

# ─── Network ──────────────────────────────────────────────
# 137 = Polygon mainnet (default)
CHAIN_ID=137

# ─── Signature Type ───────────────────────────────────────
# 0 = Browser/EOA wallet, 1 = Magic/Email login
SIGNATURE_TYPE=0

# ─── Execution ────────────────────────────────────────────
# paper = simulate fills locally; live = place real CLOB orders
EXECUTION_MODE=paper
PAPER_INITIAL_CASH=1000
DEFAULT_TRADE_SIZE=2
STRATEGY_MODE=dual-live
IDEA_FACTORY_PATH=backtests/idea-factory-latest.json
META_MIN_BARS=48
META_RELOAD_MS=300000
META_SIGNAL_COOLDOWN_MS=900000

# ─── Runtime Risk Guardrails ─────────────────────────────
# Leave blank to disable each limit.
RISK_MAX_GROSS_EXPOSURE_NOTIONAL=
RISK_MAX_PER_MARKET_NOTIONAL=
RISK_MAX_ORDER_NOTIONAL=
RISK_MAX_DAILY_LOSS=
RISK_SHADOW_INITIAL_EQUITY=1000

# ─── Local Dashboard ─────────────────────────────────────
DASHBOARD_PORT=8787
DASHBOARD_HOST=127.0.0.1
RUNTIME_STATUS_PATH=backtests/runtime-status.json
# Optional command overrides for dashboard control plane
DASHBOARD_BOT_CMD=npm run dev
DASHBOARD_IDEAS_CMD=npm run ideas:build
DASHBOARD_SCAN_CMD=npm run scan:btc:inefficiencies
# Recurring ideas cycle interval for autopilot
DASHBOARD_AUTOPILOT_INTERVAL_MS=3600000

# BTC inefficiency scanner
BTC_SCAN_MAX_EVENTS=80
BTC_SCAN_MAX_MARKETS=160
BTC_SCAN_MIN_EDGE=0.01
BTC_SCAN_STRUCTURAL_THRESHOLD=0.04
BTC_SCAN_SLIPPAGE_BUFFER=0.005

# ─── Hosts ────────────────────────────────────────────────
CLOB_HOST=https://clob.polymarket.com
GAMMA_HOST=https://gamma-api.polymarket.com
DATA_API_HOST=https://data-api.polymarket.com

# ─── Logging ──────────────────────────────────────────────
LOG_LEVEL=info

# ─── Backtesting ───────────────────────────────────────────
# interval: max | 1w | 1d | 6h | 1h
BACKTEST_INTERVAL=1w
BACKTEST_FIDELITY=15
BACKTEST_MAX_MARKETS=4
BACKTEST_MIN_BARS=30
BACKTEST_TRAIN_SPLIT=0.7

# Risk controls used by backtest engine
# Optional: leave blank to disable stop/take triggers
RISK_STOP_LOSS=
RISK_TAKE_PROFIT=
RISK_MIN_BARS_BETWEEN_TRADES=2
RISK_MAX_TRADES=

# ─── Idea Factory (Multi-Algo Pipeline) ───────────────────
IDEA_INTERVAL=max
IDEA_FIDELITY=60
IDEA_MAX_MARKETS=8
IDEA_MIN_BARS=100
IDEA_MIN_TRAIN_BARS=70
IDEA_FOLD_TEST_BARS=24
IDEA_FOLD_STEP_BARS=10
IDEA_MAX_FOLDS=8
IDEA_MAX_CANDIDATES_PER_FAMILY=150
IDEA_TOP_PER_MARKET=8
