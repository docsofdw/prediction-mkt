{
  "name": "polymarket-trader",
  "version": "1.0.0",
  "description": "Minimal Polymarket trading scaffolding for weather and bitcoin prediction markets",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",

    "setup:check": "ts-node src/scripts/setup-check.ts",
    "derive:keys": "ts-node src/scripts/derive-keys.ts",
    "discover": "ts-node src/scripts/discover-markets.ts",
    "diagnose:trading": "ts-node src/scripts/diagnose-trading.ts",
    "dashboard": "ts-node src/scripts/dashboard.ts",

    "backtest": "ts-node src/scripts/backtest.ts",
    "ideas:build": "ts-node src/scripts/idea-factory.ts",

    "validation:init": "ts-node src/markets/btc/scripts/validation-init.ts",
    "validation:checkpoints": "ts-node src/markets/btc/scripts/validation-checkpoints.ts",
    "phase1:monitor": "ts-node src/markets/btc/scripts/phase1-monitor.ts",
    "phase1:report": "ts-node src/markets/btc/scripts/phase1-report.ts",
    "phase2:ingest": "ts-node src/markets/btc/scripts/phase2-ingest.ts",
    "phase2:report": "ts-node src/markets/btc/scripts/phase2-report.ts",
    "phase3:report": "ts-node src/markets/btc/scripts/phase3-report.ts",

    "btc:autocorrelation": "ts-node src/markets/btc/scripts/analyze-autocorrelation.ts",
    "btc:funding": "ts-node src/markets/btc/scripts/analyze-funding-direction.ts",
    "btc:timeofday": "ts-node src/markets/btc/scripts/analyze-time-of-day.ts",
    "btc:inefficiencies": "ts-node src/markets/btc/scripts/scan-btc-inefficiencies.ts",
    "btc:updown:ingest": "ts-node src/markets/btc/scripts/ingest-updown.ts",
    "btc:updown:logger": "ts-node src/markets/btc/scripts/updown-live-logger.ts",

    "becker:download": "ts-node src/scripts/becker/download-dataset.ts",
    "becker:explore": "ts-node src/scripts/becker/explore-dataset.ts",
    "becker:calibration": "ts-node src/scripts/becker/analyze-btc-calibration.ts",
    "becker:maker-taker": "ts-node src/scripts/becker/analyze-maker-taker.ts",
    "becker:strategy": "ts-node src/scripts/becker/generate-strategy-params.ts",

    "maker:scan": "ts-node src/scripts/maker-scan.ts",
    "maker:notify": "ts-node src/scripts/maker-scan-notify.ts",
    "maker:place": "ts-node src/scripts/place-maker-order.ts",
    "maker:paper": "ts-node src/scripts/maker-paper-trade.ts",
    "maker:paper:scan": "ts-node src/scripts/maker-paper-trade.ts --scan",
    "maker:paper:check": "ts-node src/scripts/maker-paper-trade.ts --check",
    "maker:paper:report": "ts-node src/scripts/maker-paper-trade.ts --report",
    "maker:paper:reset": "ts-node src/scripts/maker-paper-trade.ts --reset",
    "maker:paper:cron": "ts-node src/scripts/maker-paper-cron.ts",
    "maker:paper:cron:summary": "ts-node src/scripts/maker-paper-cron.ts --summary",

    "cset:scan": "ts-node src/scripts/complete-set-scanner.ts",
    "cset:once": "ts-node src/scripts/complete-set-scanner.ts --once",
    "cset:stats": "ts-node src/scripts/complete-set-scanner.ts --stats",
    "cset:report": "ts-node src/scripts/complete-set-scanner.ts --report",

    "telegram:bot": "ts-node src/telegram-bot/index.ts",
    "validate:claim": "ts-node src/claim-validator/scripts/validate-claim.ts"
  },
  "keywords": [
    "polymarket",
    "trading",
    "prediction-markets",
    "bitcoin",
    "weather"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@polymarket/clob-client": "^5.2.3",
    "@polymarket/real-time-data-client": "^1.4.0",
    "axios": "^1.13.5",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.3.1",
    "duckdb-async": "^1.1.3",
    "ethers": "^5.8.0",
    "node-telegram-bot-api": "^0.67.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/node-telegram-bot-api": "^0.64.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
